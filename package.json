{
  "name": "go-party",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/fatukunda/go-party.git",
  "author": "Frank Atukunda <fatukunda@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node ./build/index.js",
    "dev": "nodemon --exec babel-node ./src/index.js",
    "test": "export NODE_ENV=test && sequelize db:migrate:undo:all && sequelize db:migrate && nyc --require @babel/register mocha ./src/tests --timeout 20000 --exit",
    "build": "rm -rf ./build && babel -d ./build ./src -s",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
    "coverage": "nyc yarn test && yarn generate-lcov && yarn coveralls-coverage && yarn codeclimate-coverage"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "path": "^0.12.7",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.18.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.6",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1"
  }
}
